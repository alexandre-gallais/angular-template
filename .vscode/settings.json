	"workbench.colorCustomizations": {
		"sideBar.foreground": "#cccccccc",
		"gitDecoration.ignoredResourceForeground": "#cccccccc",
		"tree.indentGuidesStroke": "#cccccccc"
	},

	// ### Font
	"editor.fontFamily": "Fira Code",
	"editor.fontLigatures": "'calt', 'cv02', 'cv04', 'cv30', 'ss01', 'ss03', 'ss04', 'ss05'",
	"editor.fontSize": 14,
	"editor.letterSpacing": 0.16,

	// ### Minimap
	"editor.minimap.enabled": false
	*/
}
