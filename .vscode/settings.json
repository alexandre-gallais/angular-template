{
	// # VSCODE project settings
	// ## Plugins
	// ### Explorer Exclude
	"files.exclude": {
		"**/.git": false,
		"**/.svn": false,
		"**/.hg": false,
		"**/CVS": false,
		"**/.DS_Store": false,
		"**/Thumbs.db": false,
		".vscode": false,
		".git": false,
		"tsconfig*.json": false,
		"package*.json": false,
		"angular.json": false,
		".stylelintrc.json": false,
		".gitignore": false,
		".eslintrc.json": false,
		".eslintignore": false,
		".editorconfig": false,
		".browserslistrc": false,
		"node_modules": false,
		"eslint": false,
		"README.md": false
	},
	"explorerExclude.backup": {
		"**/.git": false,
		"**/.svn": false,
		"**/.hg": false,
		"**/CVS": false,
		"**/.DS_Store": false,
		"**/Thumbs.db": false,
		".vscode": true,
		".git": true,
		"tsconfig*.json": true,
		"package*.json": true,
		"angular.json": true,
		".stylelintrc.json": true,
		".gitignore": true,
		".eslintrc.json": true,
		".eslintignore": true,
		".editorconfig": true,
		".browserslistrc": true,
		"node_modules": true,
		"eslint": true,
		"README.md": true
	},

	// ### Better Comments
	"better-comments.tags": [
		// Text
		// # H1
		// ## H2
		// ### H3
		// i: ...
		// TODO: ...
		{
			"tag": "# ",
			"color": "#FFFF64",
			"bold": true
		},
		{
			"tag": "## ",
			"color": "#FFFF96",
			"bold": true
		},
		{
			"tag": "### ",
			"color": "#FFFFC8",
			"bold": true
		},
		{
			"tag": "i: ",
			"color": "#C8DCFF",
			"bold": true
		},
		{
			"tag": "TODO: ",
			"color": "#FFC8C8",
			"bold": true
		}
	],

	// ### ESLint
	"eslint.format.enable": true,
	"eslint.validate": ["typescript"],
	"eslint.probe": ["typescript"],
	"[typescript]": {
		"editor.codeActionsOnSave": {
			"source.fixAll.eslint": true
		}
	},

	// ### Markdownlint
	"[markdown]": {
		"editor.codeActionsOnSave": {
			"source.fixAll.markdownlint": true
		}
	},

	// ### Path Intellisense
	"typescript.suggest.paths": false,
	"javascript.suggest.paths": false,
	"path-intellisense.autoTriggerNextSuggestion": true,
	"path-intellisense.extensionOnImport": true,
	"path-intellisense.showHiddenFiles": true,

	// ### Prettier + Stylelint
	"[scss]": {
		"editor.formatOnSave": true,
		"editor.defaultFormatter": "esbenp.prettier-vscode",
		"editor.codeActionsOnSave": {
			"source.fixAll.stylelint": true
		}
	},

	// ### Prettier
	"[json]": {
		"editor.formatOnSave": true,
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[jsonc]": {
		"editor.formatOnSave": true,
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[html]": {
		"editor.formatOnSave": true,
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"prettier.useTabs": true,
	"prettier.tabWidth": 4,
	"prettier.singleAttributePerLine": true,

	// ### Stylelint
	"scss.validate": false,
	"stylelint.validate": ["scss"]

	/*
	// ## VSCODE Theme
	// ### Angular
